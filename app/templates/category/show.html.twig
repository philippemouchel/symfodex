{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} category{% endblock %}

{% block body %}
    {% include 'navigation/main-menu.html.twig' with {'active_route': 'category'} %}

    <h1>{{ category.name }} category</h1>

    {% if category.pokemon is not empty %}
        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th scope="col" class="number">#</th>
                <th scope="col" class="name">Name</th>
                <th scope="col" class="type">Type</th>
                <th scope="col" class="category">Category</th>
            </tr>
            </thead>
            <tbody>
            {% for pokemon in category.pokemon %}
                <tr>
                    <th scope="row" class="number">{{ pokemon.number }}</a></th>
                    <td class="name"><a href="{{ path('pokemon_show', {id: pokemon.id}) }}">{{ pokemon.name }}</a></td>
                    <td class="type">
                        {% for type in pokemon.type %}
                            <a href="{{ path('type_show', {id: type.id}) }}">{{ type.name }}</a>{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                    <td class="category"><a href="{{ path('category_show', {id: pokemon.category.id}) }}">{{ pokemon.category.name }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
