{% extends 'base.html.twig' %}

{% block title %}{{ pokemon.name }} #{{ pokemon.number }}{% endblock %}

{% block body %}
    {% include 'navigation/main-menu.html.twig' with {'active_route': 'pokemon'} %}

    <div class="card" style="max-width: 992px">
        <h1 class="card-header">{{ pokemon.name }} <span class="text-secondary">#{{ pokemon.number }}</span></h1>
        <div class="card-body">
            <p class="card-text">{{ pokemon.description }}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><span class="text-secondary">Category:</span> <a href="{{ path('category_show', {id: pokemon.category.id}) }}">{{ pokemon.category.name }}</a></li>
            <li class="list-group-item"><span class="text-secondary">Height:</span> {{ pokemon.height }} millimeters</li>
            <li class="list-group-item"><span class="text-secondary">Weight:</span> {{ pokemon.weight }} grams</li>
            <li class="list-group-item">
                <h4>{% for type in pokemon.type %}
                <a class="badge badge-dark" href="{{ path('type_show', {id: type.id}) }}">{{ type.name }}</a>{% if not loop.last %}&nbsp;{% endif %}
                {% endfor %}</h4>
            </li>
        </ul>
    </div>
{% endblock %}
