{% extends 'base.html.twig' %}

{% block title %}{{ pokemon.name }} #{{ pokemon.number }}{% endblock %}

{% block body %}
    {% include 'navigation/main-menu.html.twig' with {'active_route': 'pokemon'} %}

    <div class="card">
        <h1 class="card-header">{{ pokemon.name }} <span class="text-secondary">#{{ "%03d"|format(pokemon.number) }}</span></h1>
        <div class="card-body">
            <p class="card-text">{{ pokemon.description }}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><span class="text-secondary">{% trans %}label.category-sc{% endtrans %}</span> <a href="{{ path('category_show', {id: pokemon.category.id}) }}">{{ pokemon.category.name }}</a></li>
            <li class="list-group-item"><span class="text-secondary">{% trans %}label.height-sc{% endtrans %}</span> {{ convertHeight }} m</li>
            <li class="list-group-item"><span class="text-secondary">{% trans %}label.weight-sc{% endtrans %}</span> {{ convertWeight }} kg</li>
            <li class="list-group-item">
                <h4>{% for type in pokemon.type %}
                        <a class="badge {% if type.bootstrapColor is not empty %}badge-{{ type.bootstrapColor }}{% endif %}" style="{{ type.getBackgroundProperty }}" href="{{ path('type_show', {id: type.id}) }}">{{ type.name }}</a>
                    {% endfor %}</h4>
            </li>
        </ul>
    </div>
{% endblock %}
