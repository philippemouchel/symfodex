{% extends 'base.html.twig' %}

{% block title %}Types{% endblock %}

{% block body %}
    {% include 'navigation/main-menu.html.twig' with {'active_route': 'type'} %}

    <h1>Types</h1>

    {% if types is not empty %}
    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="name">Name</th>
                <th scope="col" class="type">Description</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <th scope="row" class="name">
                    <h3><a class="badge badge-{{ type.bootstrapColor }}" style="{{ type.getBackgroundProperty }}" href="{{ path('type_show', {id: type.id}) }}">{{ type.name }}</a></h3>
                </th>
                <td class="description">{{ type.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endblock %}
