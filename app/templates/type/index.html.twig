{% extends 'base.html.twig' %}

{% block title %}{% trans %}label.types{% endtrans %}{% endblock %}

{% block body %}
    {% include 'navigation/main-menu.html.twig' with {'active_route': 'type'} %}

    <h1>{% trans %}label.types{% endtrans %}</h1>

    {% if types is not empty %}
    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="name">{% trans %}label.name{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <th scope="row" class="name">
                    <h3><a class="badge {% if type.bootstrapColor is not empty %}badge-{{ type.bootstrapColor }}{% endif %}" style="{{ type.getBackgroundProperty }}" href="{{ path('type_show', {id: type.id}) }}">{{ type.name }}</a></h3>
                </th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endblock %}
